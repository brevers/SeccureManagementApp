<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5" style="background: linear-gradient(to bottom, #ffffff 0%,#f0f8ff 100%);">
        <div class="card-body p-5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
            <h1 class="h3 mb-3 font-weight-normal text-center">Log in</h1>

            <div class="form-label-group mb-4">
              <%= f.label :email, class: "sr-only" %>
              <%= f.email_field :email, autofocus: true, class: "form-control rounded-pill", placeholder: "Email address", autocomplete: "email" %>
            </div>

            <div class="form-label-group mb-4">
              <%= f.label :password, class: "sr-only" %>
              <%= f.password_field :password, class: "form-control rounded-pill", placeholder: "Password", autocomplete: "current-password" %>
            </div>

            <div class="field">
              <h2>2FA -OTP Here</h2>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox mb-4">
                <label>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </label>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block rounded-pill mt-4" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
