<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Users</h2>
        </div>
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Email</th>
                <th>Role</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <%= form_tag admin_user_path(user), method: :put do %>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= select_tag :role,
                        options_for_select(User.roles.map{|k,_| [k,k]}, user.role),
                        class: "form-control"
                      %>
                    </td>
                    <td>
                      <%= submit_tag "Update", class: "btn btn-outline-info" %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-footer text-center">
          <%= button_to "Invite User", "", class: "btn btn-outline-info", style: "color: #007bff;" %>
        </div>
      </div>
    </div>
  </div>
</div>
