<div class="container mt-5">
  <div class="row">
    <div class="">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.email %>
            </td>
            <td>
               <%= select_tag :department,
                  options_for_select(User.roles.map{|k,_| [k,k]}, user.role)
                %>
            </td>
            <td>
              <%= link_to "Update", admin_user_path(user),
                  data: { turbo_method: :put },
                  class: "btn btn-outline-primary"
              %>
            </td>
          </tr>
        <% end %>
      </table>
      <hr>
      <div>
        <%= button_to "Invite User", "", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
