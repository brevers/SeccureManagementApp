<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5" style="background: linear-gradient(to bottom, #ffffff 0%,#f0f8ff 100%);">
        <div class="card-body p-5">
          <h2 class="h3 mb-3 font-weight-normal text-center">Editing Project</h2>
          <%= form_with(model: @project, local: true, html: {class: "form"}) do |form| %>
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control form-input", placeholder: "Project Name", autofocus: true %>

            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control form-input", placeholder: "Project Description", rows: 5 %>

            <%= form.label :due_date, class: "form-label" %>
            <%= form.date_field :due_date, class: "form-control form-input" %>

            <%= form.submit "Update Project", class: "btn btn-primary mt-3" %>
          <% end %>
        </div>
      </div>
      <div class="text-left mt-4">
        <%= link_to "Back to projects", projects_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div>
